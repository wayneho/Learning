<%= form_for @user do |f| %>
	<%= f.label :username, "Username:" %>
	<%= f.text_field :username %><br />

	<%= f.label :password, "Password:" %>
	<%= f.password_field :password %><br />

	<%= f.label :email, "Email:" %>
	<%= f.email_field :email %><br />

	<%= f.submit "Create User" %>
<% end %>

<% if @user.errors.any? %>
		<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
		<% end %>
		</ul>
<% end %>